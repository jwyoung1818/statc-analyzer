<h2>
  <%= :in_the_forums.l %>
</h2>
<table width="100%">
  <thead>
    <tr>
      <th class="quiet">
        <%= :topic.l %>
      </th>
      <th class="quiet centered">
        <%= :posts.l %>
      </th>
    </tr>
  </thead>
  <tbody>
    <% @topics.each do |topic| %>
      <tr>
        <td>
          <%= link_to truncate(strip_tags(topic.title), :length => 45), forum_topic_path(topic.forum, topic.sb_posts.last.topic, :page => topic.last_page, :anchor => topic.sb_posts.last.dom_id) %>
          <br/>
          <p class="small quiet">
            <%= "in #{link_to topic.forum.name, forum_path(topic.forum)} by <strong>#{topic.sb_posts.last.user.login}</strong>:".html_safe %>
            <br/>
            <%= h truncate(strip_tags(topic.sb_posts.last.body), :length => 45) %>
          </p>
        </td>
        <td class="post_count">
          <strong>
            <%= topic.sb_posts_count %>
          </strong>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to :go_to_the_forums.l, forums_path, :class => 'right small'         %>
